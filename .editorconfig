root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 80

[makefile]
indent_style = tab
indent_size = 8

[*.go]
indent_style = tab
indent_size = 8

[*.{ex, exs, eex, yml, md, markdown}]
indent_size = 2

[package.json]
indent_size = 2

